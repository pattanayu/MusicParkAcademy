<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_musicpark_calender_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/edit_search"
            android:layout_height="wrap_content"
            android:background="@drawable/img_iph_rama_buttom_bgsearch22x"
            android:drawableLeft="@drawable/img_iph_rama_buttom_search2x"
            android:drawablePadding="@dimen/padding_small"
            android:padding="@dimen/padding_medium"
            android:hint="search for book/sheet"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:text="SEARCH"
            android:id="@+id/bt_search"
            android:textColor="@color/white"
            android:background="@color/main_red"/>


    </LinearLayout>



    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_medium"
        android:numColumns="3"
        android:padding="@dimen/padding_large"
        android:id="@+id/gv_studentbook"
        android:verticalSpacing="20dp"
        android:layout_marginBottom="@dimen/margin_medium"
        android:horizontalSpacing="20dp">
    </GridView>
</LinearLayout>
