<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/musicpark_teacher_label_one">

        <TextView
            android:id="@+id/idteacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="109dp"
            android:layout_marginStart="109dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Harry Styles"
            android:textSize="@dimen/text_extra" />

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/idteacher_name"
            android:layout_alignStart="@+id/idteacher_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Teacher of MusicPark Academy"
            android:textSize="@dimen/text_vlarge" />

        <ImageView
            android:id="@+id/teacher_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_medium"
            android:src="@drawable/mc_user_login" />

    </RelativeLayout>
</LinearLayout>
