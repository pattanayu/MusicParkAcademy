<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/tab_content_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/line_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_menu"
            android:padding="@dimen/padding_vsmall"
            android:src="@drawable/img_ad_tabbar_active_home" />

        <ImageView
            android:id="@+id/shop_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_menu"
            android:padding="@dimen/padding_vsmall"
            android:src="@drawable/img_ad_tabbar_active_shop" />

        <ImageView
            android:id="@+id/promotion_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_menu"
            android:padding="@dimen/padding_vsmall"
            android:src="@drawable/img_ad_tabbar_active_promotion" />

        <ImageView
            android:id="@+id/video_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_menu"
            android:padding="@dimen/padding_vsmall"
            android:src="@drawable/img_tabbar_article" />

        <ImageView
            android:id="@+id/article_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_menu"
            android:padding="@dimen/padding_vsmall"
            android:src="@drawable/img_ad_tabbar_active_more" />
    </LinearLayout>

</LinearLayout>