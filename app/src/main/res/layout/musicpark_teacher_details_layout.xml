<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_musicpark_calender_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:background="@color/trans_selected_square_color">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/profile_pic"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_large"
            android:src="@drawable/musicpark_teacher"
            />
        <TextView
            android:id="@+id/member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_extra"
            android:text="Harry Styles"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/txt_white"/>
        <TextView
            android:id="@+id/member_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_white"
            android:text="Guitar Teacher of MusicPark Academy"
            android:textSize="@dimen/text_vlarge"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/call_mobile"
                android:layout_marginRight="@dimen/margin_vlarge"
                android:src="@drawable/musicpark_call_teacher_bt"/>
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/facebook_bt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_vlarge"
                android:src="@drawable/musicpark_facebook_teacher_bt"/>

        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_large"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Firstname"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/text_vlarge"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:background="@drawable/img_musicpark_calender_white"/>
            <TextView
                android:layout_margin="@dimen/margin_small"
                android:textColor="@color/white"
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:textSize="@dimen/text_vlarge"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_iph_signin_icon_line"/>
        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_course"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Lastname"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/text_vlarge"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:background="@drawable/img_musicpark_calender_white"/>
            <TextView
                android:id="@+id/lastname"
                android:layout_margin="@dimen/margin_small"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:textSize="@dimen/text_vlarge"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_iph_signin_icon_line"/>
        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nickname"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/text_vlarge"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:background="@drawable/img_musicpark_calender_white"/>
            <TextView
                android:layout_margin="@dimen/margin_small"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:id="@+id/nickname"
                android:textSize="@dimen/text_vlarge"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_iph_signin_icon_line"/>
        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/text_vlarge"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:background="@drawable/img_musicpark_calender_white"/>
            <TextView
                android:layout_margin="@dimen/margin_small"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:id="@+id/subject"
                android:textSize="@dimen/text_vlarge"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_iph_signin_icon_line"/>
        <LinearLayout
            android:layout_margin="@dimen/margin_small"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/text_vlarge"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:background="@drawable/img_musicpark_calender_white"/>
            <TextView
                android:layout_margin="@dimen/margin_small"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:id="@+id/email"
                android:textSize="@dimen/text_vlarge"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_iph_signin_icon_line"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
