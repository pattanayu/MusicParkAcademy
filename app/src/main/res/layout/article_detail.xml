<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/padding_medium">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_large"
                android:textColor="@android:color/black"
                android:padding="@dimen/padding_small"
                android:textStyle="bold"
                android:id="@+id/article_detail_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="โพสเมื่อ : 23 ธันวาคม 2557"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/text_blue"
                android:id="@+id/article_detail_update" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/article_detail_image"
            android:src="@drawable/img_navbar_logo"
            android:background="@android:color/black"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:text="New Text"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/text_gray"
            android:id="@+id/article_detail_description" />
    </LinearLayout>
</ScrollView>